<div class="reviewform">
    <p>このインターンを評価する</p>
          <%= form_for [@firm, @review] do |f| %>
          <div style="margin: 15px 0">
            <%= f.label :評価, style: { 'margin-right' => 8 } %>
            <%= f.number_field :rate, placeholder: '評価', value: 1, max: 100, min: 1, html: { class: "search__query", style: 'text-align: right;' } %>
          </div>
          <div style="margin: 8px 0">
            <%= f.text_area :test, placeholder: '選考について', style: 'width: 70%; height: 150px;' %>
          </div>
          <div style="margin: 8px 0">
            <%= f.text_area :review, placeholder: 'インターンについて', style: 'width: 70%; height: 150px;' %>
          </div>
          <div class="row">
            <div class="col10 push1">
              <%= button_tag type: "submit", class: "btn btn--block" do %>
              投稿する<i class="icon-arrow-right"></i>
              <% end %>
            </div>
          </div>
          <% end %>
</div>